            break;
          case 'e': // Right
            newWidth = Math.max(20, resizeElementStartState.width + deltaX);
            break;
          case 'w': // Left
            newX = resizeElementStartState.x + deltaX;
            newWidth = Math.max(20, resizeElementStartState.width - deltaX);
            break;
